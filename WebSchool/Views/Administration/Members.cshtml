@using WebSchool.ViewModels.Users
@model UserViewModel[]

@{ 
    Layout = "_Layout";
    ViewData["Title"] = "Members";
}

<link rel="stylesheet" href="~/css/members.css" />

<main class="main-container">
    <h1>Members</h1>

    <table class="members-table">
        <thead>
            <tr>
                <th width="60%">Member</th>
                <th width="20%">Settings</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>@member.Email</td>
                    <td><a asp-controller="Members" asp-action="Settings" asp-route-memberId="@member.Id" asp-route-groupId="@ViewData["GroupId"]" class="settings-link">Settings</a></td>
                    <td><a asp-controller="Members" asp-action="Remove" asp-route-memberId="@member.Id" asp-route-groupId="@ViewData["GroupId"]" class="remove-link">Remove</a></td>
                </tr>
            }
        </tbody>
    </table>
</main>