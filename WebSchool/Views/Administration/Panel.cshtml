@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <form>
            <div asp-validation-summary="All"></div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Role</label>
                </div>
                <select class="custom-select" id="inputGroupSelect01" name="role">
                    <option selected>Choose...</option>
                    <option value="1">Teacher</option>
                    <option value="2">Student</option>
                </select>
            </div>

            <div class="form-group">
                <textarea class="form-control" rows="5" placeholder="Example: custom@@gmail.com, another@@yahoo.com" name="emails"></textarea>
            </div>
            <button class="btn btn-primary w-100">Generate Links</button>
        </form>
    </div>
</div>

<div class="row mt-5">
    <h3>Generated links:</h3>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">Created on</th>
                <th scope="col">Is used</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>custom@@gmail.com</td>
                <td>2020/11/29</td>
                <td class="text-success">Yes</td>
                <td><button disabled class="btn btn-danger w-50">Delete</button></td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>custom@@gmail.com</td>
                <td>2020/11/29</td>
                <td class="text-danger">No</td>
                <td><button class="btn btn-danger w-50">Delete</button></td>
            </tr>
            <tr>
                <th scope="row">3</th>
