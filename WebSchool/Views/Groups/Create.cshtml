@using WebSchool.ViewModels.Group
@model CreateGroupInputModel 

@{ 
    Layout = "_Layout";
    ViewData["Title"] = "New Group";
}


<form asp-controller="Groups" asp-action="Create" method="post" class="col-md-6 offset-md-3">
    <h1>Create new group</h1>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <p class="text-danger" id="customError"></p>
        <input asp-for="Name" class="form-control" placeholder="Group name" id="nameInput" />
    </div>
    <button class="btn btn-primary w-25" id="createButton">Create</button>
</form>

@section Scripts {
    <script src="~/js/createGroup.js"></script>
}