<link rel="stylesheet" href="~/css/sidenav.css" />

<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    @if (this.User.IsInRole("Admin"))
    {
        <a asp-area="Admin" asp-controller="Administration" asp-action="Panel">Administration</a>
        <a asp-area="Admin" asp-controller="Classes" asp-action="Index">Classes</a>
        <a asp-area="Admin" asp-controller="Administration" asp-action="Teachers">Teachers</a>
        <a asp-area="Admin" asp-controller="Administration" asp-action="Users">Users</a>
    }
    else if (this.User.IsInRole("Teacher"))
    {
        <a asp-area="Teacher" asp-controller="Assignment" asp-action="GiveAssignment">Give Assignment</a>
        <a asp-area="Teacher" asp-controller="Assignment" asp-action="Results">Results</a>
    }
    else
    {
        <a asp-area="Student" asp-controller="Assignment" asp-action="Assignments">Assignments</a>
        <a asp-area="Student" asp-controller="Assignment" asp-action="Results">Results</a>
    }
</div>

<span class="nav-link text-dark" onclick="openNav()" id="openButton">Menu</span>

<script src="~/js/sidenav.js"></script>
