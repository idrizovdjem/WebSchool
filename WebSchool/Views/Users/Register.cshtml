@{
    Layout = "_Layout";
}

@model WebSchool.Models.User.RegisterUserInputModel

<div class="row">
    <div class="col-md-6 offset-3 text-center">
        <h1>Register :)</h1>
        <form method="post" asp-controller="Users" asp-action="Register" class="text-left">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" id="hiddenInput" asp-for="RegistrationLinkId"/>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" placeholder="Email address" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName">Firstname</label>
                <input asp-for="FirstName" placeholder="Firstname" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Lastname</label>
                <input asp-for="LastName" placeholder="Lastname" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" placeholder="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button class="btn btn-primary w-100">Register</button>
        </form>
    </div>
</div>
 
@section scripts{

    <script>
        const hiddenInput = document.getElementById('hiddenInput');
        if (hiddenInput.value !== "") {
            alert('Vsichko tochno')
        }
        else {
            const urlParams = new URLSearchParams(window.location.search);
            const registrationLinkId = urlParams.get('registrationLinkId');
            hiddenInput.value = registrationLinkId;
        }
    </script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}