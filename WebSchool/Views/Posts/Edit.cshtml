@using WebSchool.ViewModels.Post
@model EditPostInputModel 

@{ 
    Layout = "_Layout";
    ViewData["Title"] = "Edit post";
}

<main class="container">
    <form class="col-md-4 offset-md-4" method="post" asp-controller="Posts" asp-action="Edit">
        <h1>Edit post</h1>
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="@Model.Id" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3">
            <textarea asp-for="Content" rows="5" class="form-control" placeholder="Post content..."></textarea>
        </div>

        <button type="submit" class="btn btn-primary w-25">Create</button>
    </form>
</main>