@using WebSchool.ViewModels.Assignment
@model GiveAssignmentInputModel

@{ 
    Layout = "_Layout";
    ViewData["Title"] = "Give assignment";
}

<main class="container">
    <form class="col-md-4 offset-md-4">
        <h1>Give assignment</h1>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label>Assignment</label>
            <select asp-for="AssignmentId" class="form-select" id="assignmentsSelect">
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="DueDate"></label>
            <input asp-for="DueDate" class="form-control" />
        </div>

        <button class="btn btn-primary">Give assignment</button>
    </form>
</main>

@section Scripts {
    <script>
        window.onload = () => {
            fetch('/apiAssignments/All')
                .then(response => response.json())
                .then(data => attachAssignments(data))
                .catch(() => attachAssignments([]));
        }

        const attachAssignments = (assignments) => {
            const assignmentsSelect = document.getElementById('assignmentsSelect');
            assignmentsSelect.innerHTML = '';
            assignments.forEach(assignment => {
                const optionElement = document.createElement('option');
                optionElement.textContent = assignment.title;
                optionElement.value = assignment.id;

                assignmentsSelect.appendChild(optionElement);
            });
        }
    </script>
}