@{
    Layout = "_Layout";
}

@model WebSchool.Models.Classes.SchoolClassViewModel

<div class="row">
    <div class="col-md-6 offset-3 text-center">
        <h3>@Model.Signature</h3>
        <a href="/Admin/Classes/AddStudents?signature=@Model.Signature" class="btn btn-primary w-100 text-white">Add Students</a>
    </div>
    <div class="col-md-10 offset-1 mt-5">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Firstname</th>
                    <th scope="col">Lastname</th>
                    <th scope="col">Email</th>
                    <th scope="col">Remove</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 0;
                }
                @foreach (var student in Model.Students)
                {
                    <tr>
                        <td>@(++counter)</td>
                        <td>@student.FirstName</td>
                        <td>@student.LastName</td>
                        <td>@student.Email</td>
                        <td><a href="/Admin/Classes/Remove?signature=@Model.Signature&email=@student.Email" class="btn btn-danger w-50 text-white">Remove</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>