<div class="row mt-5">
    <h3>Created School classes:</h3>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Class Signature</th>
                <th scope="col">Created On</th>
                <th scope="col">Edit</th>
            </tr>
        </thead>
        <tbody id="classesTable">
        </tbody>
    </table>
</div>


<script>
    const xhttp = new XMLHttpRequest();

    xhttp.onreadystatechange = function () {
        if (this.readyState == 4 && this.status == 200) {
            let data = JSON.parse(this.responseText);
            const table = document.getElementById("classesTable");
            table.innerHTML = "";
            let counter = 1;
            for (let i = 0; i < data.length; i++) {
                table.innerHTML += `<tr><td>` + (counter++) + `</td><td>` + data[i].signature + `</td><td>` + data[i].createdOn + `</td><td><a href='/Admin/Classes/Information?signature=` + data[i].signature + `' class='btn btn-primary text-white'>Edit</a></td></tr>`;
            }
        }
    };

    xhttp.open("GET", "/Admin/Classes/GetClasses", true);
    xhttp.send();
</script>