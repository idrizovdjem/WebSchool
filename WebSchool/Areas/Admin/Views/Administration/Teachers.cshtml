@{
    Layout = "_Layout";
    int counter = 1;
}

@model ICollection<WebSchool.ViewModels.User.UsersViewModel>

<div class="row">
    <div class="col-md-10 offset-1 text-center">
        <h3>Teachers:</h3>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Firstname</th>
                    <th scope="col">Lastname</th>
                    <th scope="col">Assign class</th>
                </tr>
            </thead>
            <tbody id="linksTable">
                @foreach (var teacher in Model)
                {
                    <tr>
                        <td scope="col">@(counter++)</td>
                        <td scope="col">@teacher.FirstName</td>
                        <td scope="col">@teacher.LastName</td>
                        <td scope="col"><a asp-area="Admin" asp-controller="Classes" asp-action="AssignToClass" asp-route-id="@teacher.Id" class="btn btn-primary w-50 text-white">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>